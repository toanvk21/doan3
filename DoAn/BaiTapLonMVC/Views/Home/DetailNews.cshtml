                        </div>
                    </div>
                    <!-- product widget -->
                </div>
            </div>
            <!-- Reviews -->
            <div ng-init="GetCommentNewsList()">
                <strong>Bình luận</strong>
                <hr/>
                <div id="reviews">
                    <ul class="reviews">
                        <li dir-paginate="item in CommentNewsList|itemsPerPage:3">
                            <div class="review-heading">
                                <h5 class="name">{{item.Name}}</h5>
                                <p class="date">{{item.Date}}</p>
                            </div>
                            <div class="review-body">
                                <p>{{item.Content}}</p>
                            </div>
                        </li>
                    </ul>
                    <ul>
                        <dir-pagination-controls
                            direction-links="true"
                            boundary-links="true"
                            on-page-change="pageChanged(newPageNumber)">
                        </dir-pagination-controls>
                    </ul>
                </div>
            </div>
            <!-- /Reviews -->
            <!-- Review Form -->
            <div>
                <div id="review-form">
                    <form class="review-form">
                        <input class="input" type="text" placeholder="Tên của bạn" ng-model="_NamePerson">
                        <input class="input" type="text" placeholder="Email của bạn" ng-model="_EmailPerson">
                        <textarea class="input" placeholder="Nội dung" ng-model="_ContentPerson"></textarea>
                        <input type="button" id="btnSave" class="btn btn-danger" value="Bình luận" ng-click="InsertCommentNews()"/>
                    </form>
                </div>
            </div>
            <!-- /Review Form -->
        </div>
    </div>
</div>
<script>

document.getElementById("txtContent").innerHTML =localStorage.getItem("ContentNews");
document.getElementById("txtTitile").innerHTML =localStorage.getItem("TitileNews");
</script>