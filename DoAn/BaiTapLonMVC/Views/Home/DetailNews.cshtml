                                <a ng-click="GetProduct(ProductSelling[0].ID)" href="@Url.Action("DetailsProduct", "Home")">{{ProductSelling[0].Name}}</a>
                            </h3>
                            <h4 class="product-price">{{ProductSelling[0].Cost.toLocaleString("vi-VN")}} VNĐ<del class="product-old-price">{{(ProductSelling[0].Cost*1.2).toLocaleString("vi-VN")}} VNĐ</del></h4>
                        </div>
                    </div>
