@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@RenderPage("~/Views/Home/NavCategory.cshtml")
<div ng-app="Home" class="container" style="margin-top: 50px">
    <div class="row" ng-controller="HomeController" ng-init="LoadNews()">
        <div class="col-md-8 col-sm-12">
            <h3 id="txtTitile"></h3>
            <br/>
            <p id="txtContent"></p>
